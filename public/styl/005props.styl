@import '001func.styl'

.taxifolia-main-props
	width 100%
	background-image url(../images/sld_2.jpg)
	background-position 50% 0%
	padding-bottom 50px
	
.taxifolia-main-props-responsive
	width staticWidth
	margin 0 auto
	
.taxifolia-main-props-list
	padding 0px
	
.taxifolia-main-props-list-item 
	display flex 
	justify-content space-between
	align-items center
	width 100%
	padding 20px 0
	
.taxifolia-main-props-list-item-image-path
	width 117px
	height 132px
	margin-right 20px
	background url(../images/sprite.png) 0px 0px
	position relative

.taxifolia-main-props-list-item-description-path
	width calc(100% - 140px)

.taxifolia-main-props-list-item-description-path span 
	color grey
	
.taxifolia-main-props-list-item-description-path h4
	font-family "PFreg"
	font-size 18px
	padding 10px 0 20px
	margin 0

.taxifolia-main-props-list-item-description-path p 
	margin 0
	line-height 20px

.--heart:before
	content ""
	background url(../images/heart.svg)
	position absolute
	width 100px
	background-size 100% 100%
	height 100px
	left 11px
	top 13px
	
.--veins:before
	content ""
	background url(../images/vien.svg)
	position absolute
	width 100px
	background-size 100% 100%
	height 100px
	left 8px
	top 13px

.--brain:before
	content ""
	background url(../images/brain.svg)
	position absolute
	width 100px
	background-size 100% 100%
	height 100px
	left 8px
	top 13px

.--lungs:before
	content ""
	background url(../images/leather.svg)
	position absolute
	width 100px
	background-size 100% 100%
	height 100px
	left 10px
	top 17px

.--immunity:before
	content ""
	background url(../images/imunitet.svg)
	position absolute
	width 96px
	background-size 100% 100%
	height 100px
	left 10px
	top 14px
	

@media screen and (max-width: 1024px)
	.taxifolia-main-props-responsive
		width 100%
		padding 0 50px
	
	.taxifolia-main-props
		background-size auto 100%
		
@media screen and (max-width: 600px)
	.taxifolia-main-props-list-item
		flex-wrap wrap
		
	.taxifolia-main-props-list-item-description-path
		width 100%
		
	.taxifolia-main-props-list-item
		justify-content center