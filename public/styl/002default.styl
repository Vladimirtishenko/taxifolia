@import '001func.styl'

@font-face
  font-family "PFsemi"
  src url("../font/pfbeausanspro-sebold.ttf")
  font-style normal
  font-weight normal

@font-face
  font-family "PFbold"
  src url("../font/pfbeausanspro-bold.ttf")
  font-style normal
  font-weight normal

@font-face
  font-family "PFreg"
  src url("../font/pfbeausanspro-reg.ttf")
  font-style normal
  font-weight normal

@font-face
  font-family "PBook"
  src url("../font/pfbeausanspro-book.ttf")
  font-style normal
  font-weight normal

*
  box-sizing border-box

html, body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
abbr, address, cite, code,
del, dfn, em, img, ins, kbd, q, samp,
small, strong, sub, sup, var,
b, i, dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section, summary,
time, mark, audio, video
  background transparent
  border 0
  font-size 100%
  margin 0
  outline 0
  padding 0
  vertical-align baseline

body 
  line-height 1 
  background backGrey
  font-family Arial

article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section
  display block

ul
  list-style none

blockquote, q
  quotes none

blockquote:before, blockquote:after,
q:before, q:after
  content ''
  content none

a
  background transparent
  font-size 12px
  margin 0
  padding 0
  vertical-align baseline
  text-decoration none

mark
    font-style normal
    font-weight 400

del
  text-decoration line-through

abbr[title], dfn[title]
  border-bottom 1px dotted
  cursor help

table
  border-collapse collapse
  border-spacing 0

/* change border colour to suit your needs */
hr
  border 0
  border-top 1px solid #ccc
  display block
  height 1px
  margin 1em 0
  padding 0

input, select 
  vertical-align middle

span 
  font-size 12px

input
  height 35px
  background #dfe7c6
  border none
  padding 0 10px

/* Defaults */

.taxifolia-modal-closes
  width 60px
  height 60px
  display inline-block
  top 20px
  right 20px
  position absolute
  background url(../images/close.png)
  background-size 100% 100%
  cursor pointer
  transition .5s
  &:hover 
    transform rotate(90deg) 
    

.taxifolia-modal
  width 100%
  height 100%
  display none
  background rgba(249, 253, 215, 0.9)
  position fixed
  justify-content center
  align-items center
  opacity 0
  z-index 999

.taxifolia-modal-flex
  display flex !important

.taxifolia-modal-animate-in
  animation-name opacityIn
  animation-fill-mode both
  animation-duration .8s
  animation-delay .5s

.taxifolia-modal-animate-out
  animation-name opacityOut
  animation-fill-mode both
  animation-duration .8s

@keyframes opacityIn
  from 
    opacity 0
  to
    opacity 1
  
@keyframes opacityOut
  from 
    opacity 1
  to
    opacity 0

.taxifolia-cell
  width 700px

.taxifolia-main-outer
  width 100%
  position relative
  background #fff
  
.taxifolia-button
  width 130px
  color #fff
  border none 
  padding 10px 0 11px !important
  border-radius 30px
  cursor pointer
  display inline-block
  text-align center
  font-size 13px
  transition .2s
  
.-green
  background greenColor 
  &:hover
   opacity .8

.-max
  padding 14px 0 15px !important
  width 175px
  font-size 16px
  font-weight 700

.-white
  background #fff
  color #000
  font-family "PBook"
  font-size 25px
  padding 18px 0 16px !important
  width 220px
  line-height 18px
  margin auto
  
.-mini
  padding-top 25px !important
  font-size 23px !important

.taxifolia-title
  font-size 30px 
  padding 75px 0 20px
  margin 0
  text-transform uppercase
  text-align center
  font-family "PFsemi"


@media screen and (max-width: 500px)
  .taxifolia-title
    font-size 25px 
    padding 35px 0 10px
    
  .-mini
    font-size 18px !important
    padding 10px 20px !important