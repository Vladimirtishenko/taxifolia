@import '001func.styl'

.taxifolia-backets
	width 100%
	background linear-gradient(to bottom, rgba(252,247,229,1) 0%,rgba(255,255,255,1) 100%)
	
.taxifolia-backets-responsive
	width staticWidth
	margin 0 auto
	position relative

.taxifolia-backets-responsive-background
	width 1260px
	position absolute
	height 100%
	background url(../images/figure.png)
	left calc((1024px - 1260px) / 2)
	z-index 0

.taxifolia-backets-mails
	height 650px
	position relative
	

.taxifolia-backets-mails-form
	text-align center
	position relative
	z-index 1

.taxifolia-title-form
	font-size 35px
	font-family "PFsemi"
	color #fff
	padding 140px 0 55px 0
	text-transform uppercase

.taxifolia-description-form
	color #fff
	font-size 16px
	
.taxifolia-binding-input
	width 230px
	margin 20px auto 70px
	display flex
	justify-content space-between
	align-items center
	
.taxifolia-binding-input span 
	font-size 16px
	color #fff
	
.taxifolia-binding-input input 
	width 195px
	
.taxifolia-mail-form h3
	position relative
	padding 0 0 30px 0 
	&:after
		content ""
		width 100%
		position absolute
		height 1px 
		background #fff
		left 0
		z-index -1
		top 6px
	
.taxifolia-mail-form span 
	font-size 17px
	font-family "PFsemi"
	color #fff
	position relative
	background greenColor
	padding 0 20px
	z-index 9
	text-transform uppercase
	
.taxifolia-mail-form-flex-input
	display flex
	flex-wrap wrap
	justify-content space-between
	
.taxifolia-mail-form-flex-item-3
	width 32%
	
.taxifolia-mail-form-flex-item-1
	width 100%
	margin 15px 0 50px 0