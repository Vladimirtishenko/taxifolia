@import '001func.styl'

.taxifolia-top-slider
	width 100%
	height 545px 
	overflow hidden

.taxifolia-slide-item
	width staticWidth
	margin 0 auto
	display flex 
	justify-content space-between
	align-items center

.taxifolia-slide-item-background
	width 100%
	position relative 
	height 545px

.-one-slide
	background-image url(../images/sld.jpg)
	background-position 50% 50%

.taxifolia-slid-image-left-part
	padding-top 75px

.taxifolia-slide-list
	padding-left 15px
	margin 35px 0 45px

.taxifolia-slide-list-item
	color greenColor
	padding 5px 0
	position relative
	&:before
		left -16px
		top 9px
		position absolute
		width 4px 
		height 4px
		border-radius 50%
		border 2px solid yellowColor
		content ""
	
.taxifolia-slide-title
	text-transform uppercase
	margin 25px 0 0 0
	line-height 50px
	font-size 50px
	font-family "PFsemi"

.taxifolia-slide-title span 
	display block
	font-size 25px