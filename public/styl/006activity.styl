@import '001func.styl'

.taxifolia-way-of-activities
	width 100%
	
.taxifolia-way-of-activities-responsive
	width staticWidth
	margin 0 auto

.taxifolia-way-of-activities-list
	display flex 
	justify-content space-between
	align-items center
	width 100%
	padding 0
	
.taxifolia-way-of-activities-list-item
	text-align center
	width 33%
	
.taxifolia-way-of-activities-image
	width 230px
	height 260px
	display inline-block
	margin 20px 0

.taxifolia-way-of-activities-list-item h4 
	font-family "PFreg"
	margin 20px 0
	text-transform uppercase
	
.--antioksidant
	background url(../images/sprite.png) -3px -154px

.--capillaries
	background url(../images/sprite.png) -236px -154px

.--immunity-active
	background url(../images/sprite.png) -468px -154px